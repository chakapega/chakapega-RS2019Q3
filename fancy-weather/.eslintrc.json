{
    "extends": [
        "airbnb-base",
        "prettier"
    ],


    "env": {
        "browser": true,
        "node": true
    },

    "rules": {
      "class-methods-use-this": [
        "error", { "exceptMethods": ["removeClass", "createLayout", "createToolsContainer", "createMainContainer", "createLoaderContainer", "createModalContainer"] }
      ],
      "max-len": ["error", { "code": 120 }]
  }
}
